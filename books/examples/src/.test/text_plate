use std::geo2d::*;
use std::ops::*;
use std::math::*;

sketch TextPlate(text: String, height: Length = 30mm) {
    letters = Text(text, height).center();
    plate = RoundedRect(60mm, radius = 20mm);
    plate - letters
}

TextPlate("Hello µcad", 10mm)
    .extrude(2mm, 0°);

