{
  "name": "microcad",
  "displayName": "µcad language support",
  "description": "µcad (microcad) language support for visual code",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.106.1"
  },
  "repository": {
    "type": "git",
    "url": "https://codeberg.org/microcad/microcad"
  },
  "license": "AGPL-3.0-or-later",
  "icon": "icon.png",
  "publisher": "HoffmannWinkelmannGbR",
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "microcad",
        "aliases": [
          "microcad",
          "µcad",
          "mcad"
        ],
        "extensions": [
          ".µcad",
          ".mcad"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "microcad",
        "scopeName": "source.microcad",
        "path": "./syntaxes/microcad.tmLanguage.json"
      },
      {
        "scopeName": "markdown.microcad.codeblock",
        "path": "./syntaxes/microcad.markdown-injection.json",
        "injectTo": [
          "text.html.markdown"
        ],
        "embeddedLanguages": {
          "meta.embedded.block.microcad": "microcad"
        }
      }
    ],
    "commands": [
      {
        "command": "microcad.showPreview",
        "title": "MicroCAD: Show Preview"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "dependencies": {
    "glob": "^11.0.0",
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/vscode": "^1.106.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.46.3",
    "eslint": "^9.39.1",
    "esbuild": "^0.27.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}