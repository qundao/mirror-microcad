use std::geo2d::*;
use std::ops::*;

const SPACING = 8mm;

width = 4 * SPACING - 0.2mm;
height = 2 * SPACING - 0.2mm;
thickness = 1.2mm;
base_height = 9.6mm;

#[color = std::color::YELLOW]
base = {
    Frame(width, height, thickness);
    Ring(outer_d = 6.51mm, inner_d = 4.8mm)
        .translate(x = [-1..1] * SPACING);
    };

#[color = std::color::rgb(r = 1.0, g = 1.0, b = 0.0)]
base.extrude(base_height - thickness);


    /* 
    
knobs = Circle(d = 4.8mm)
    .translate(x = [1..4] * SPACING, y = [1..2] * SPACING)
    .align()
    .extrude(1.7mm)
    .translate(z = base_height);

cap = Rect(width, height)
    .extrude(thickness)
    .translate(z = base_height - thickness);

#[color = std::color::BLUE]
base | knobs | cap;

*/